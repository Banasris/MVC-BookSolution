@model BookSearchViewModel

<br /><br />
<h2>Image</h2>

<div id="Books">

    
            <div class="row">
            <div class="col-xs-1">
                     <img src="data:image;base64,@System.Convert.ToBase64String(Model.picture)" width="110" height="80" class="thumbnail img-responsive"/>
             </div>
                
            <div class="col-xs-11">
                <div>
                    <h4>@Model.title</h4>
                </div>
                <div> 
                    <b>by:</b> @Model.name
                </div>
                <div> 
                    <b>Publisher:</b> @Model.publisher
                </div>
            </div>
        </div> 
            <hr />
 
</div>


